                 <div class="row" style="display: flex; justify-content: space-between; align-items: center">
                        <div style="display: inline-block" class="section-title product__discount__title col-lg-6 col-md-6 col-sm-6">
                            <h2>Tất Cả Sản Phẩm</h2>
                        </div>
                        <div class="blog__sidebar__search col-lg-5 col-md-6 col-sm-6">
                            <form asp-action="SearchProduct" asp-controller="Home" method="get">
                                <input type="text" name="str" title="Hãy nhập thông tin cần tìm kiếm..." placeholder="Tìm kiếm...">
                                <button type="submit"><span class="icon_search"></span></button>
                            </form>
                        </div>
                 </div>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        string url = Functions.TitleSlugGeneration("product", item.ProductName, item.ProductID);
                        <div class="col-lg-3 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="@item.Image">
                                        <ul class="product__item__pic__hover">
                                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                            <li><a href="/@url"><i class="fa fa-info-circle"></i></a></li>
                                            <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                                        </ul>
                                </div>
                                <div class="featured__item__text">
                                    <h6><a class="redhover" href="/@url">@item.ProductName</a></h6>
                                    <p class="price_container">
                                        <span class="price">@String.Format("{0:0,00}", item.Price) đ</span>
                                        <span class="product_price">@String.Format("{0:0,00}", item.TotalPrice) đ</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                    
                </div>
                    <div class="pagination">
                        @Html.PagedListPager(Model, page=>Url.Action("Product", new{page = page}))
                    </div>
                
            </div>
