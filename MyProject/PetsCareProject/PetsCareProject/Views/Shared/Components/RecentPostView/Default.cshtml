@using PetsCareProject.Models;
@using PetsCareProject.Utilities;
@model IList<tblPosts>


    <div class="blog__sidebar__recent">
    @foreach (var item in Model)
    {
        string url = Functions.TitleSlugGeneration("post", item.Title, item.PostID);

            <a href="/@url" class="blog__sidebar__recent__item">
                <div class="blog__sidebar__recent__item__pic">
                <img src="@item.Thumb" alt="" style="min-width: 75px; height: 70px; object-fit: cover; object-position: center; border-radius: 2px;">
                </div>
                <div class="blog__sidebar__recent__item__text">
                    <h6>@item.Title</h6>
                    <span>@item.CreatedDate</span>
                </div>
            </a>
    }
        </div>

<!-- Recent Post End -->
