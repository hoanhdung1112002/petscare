@using PetsCareProject.Models;
@using PetsCareProject.Utilities;
@model IList<ViewDoctors>

<div class="row featured__filter">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 filter photo">
            <div class="featured__item">
                <div style="border-radius: 2px" class="featured__item__pic set-bg" data-setbg="@item.Thumb">
                </div>
                <div class="featured__item__text">
                    <h5 style="font-weight: 700; text-transform: uppercase; letter-spacing: 2; margin-bottom: 8px">@item.DoctorName</h5>
                    <h6><a style="cursor: text" href="#">@item.PositionName</a></h6>
                </div>
            </div>
        </div>
    }

</div>