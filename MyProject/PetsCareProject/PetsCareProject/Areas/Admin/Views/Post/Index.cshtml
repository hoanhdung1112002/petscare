@using PetsCareProject.Models;
@using PetsCareProject.Utilities;
@model IList<tblPosts>

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh Sách Bài Viết</h2>
    </div>
    <p>
        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Post" asp-action="Create">
            <i class="bi bi-file-earmark-text me-1"></i>
            Thêm Bài Viết Mới
        </a>
    </p>
    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-body mt-4">
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th class="col-1 text-center">#</th>
                                    <th class="col-1 text-center">Tiêu đề</th>
                                    <th class="col-1 text-center">Hình ảnh</th>
                                    <th class="col-1 text-center">Tác giả</th>
                                    <th class="col-1 text-center">Ẩn/Hiện</th>
                                    <th class="col-1 text-center">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    string url = Functions.TitleSlugGeneration("post", item.Title, item.PostID);
                                    <tr>
                                        <th class="text-center" scope="row">@item.PostID</th>
                                        <td>
                                            <a href="/@url" class="text-primary">@item.Title</a>
                                        </td>
                                        <td class="text-center">
                                            <img style="width: 60px; height: 60px; object-fit: cover; object-position: center; border-radius: 5px;" src="@item.Thumb">
                                        </td>

                                        <td class="text-center">@item.Author</td>
                                        <td class="text-center">@item.IsActive</td>
                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="Post" asp-action="Edit" asp-route-id="@item.PostID" class="btn btn-primary btn-sm"
                                               title="Sửa nội dung bài viết">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-area="Admin" asp-controller="Post" asp-action="Delete" asp-route-id="@item.PostID" class="btn btn-danger btn-sm"
                                               title="Xoá thông tin bài viết">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>



