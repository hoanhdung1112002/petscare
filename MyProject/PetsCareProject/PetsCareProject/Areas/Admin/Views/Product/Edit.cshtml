@using PetsCareProject.Utilities;
@model PetsCareProject.Models.tblProduct;

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác Nhận Sửa Sản Phẩm</h2>
    </div>
    <div class="container shadown p-5">
        <form method="post" asp-action="Edit">
            <input type="text" class="form-control mb-3" asp-for="ProductID" type="hidden" />
            <div asp-validation-summary="All"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="ProductName">ProductName</label>
                    <input type="text" autocomplete="off" class="form-control mb-3" asp-for="ProductName" placeholder="Nhập tên sản phẩm" />
                </div>

                <div class="form-group col-md-6">
                    <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                    <label asp-for="CategoryID">Danh mục bài viết</label>
                    <select asp-for="CategoryID" class="form-control"
                            asp-items="@(new SelectList(ViewBag.mnList, "Value", "Text"))">
                    </select>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Price">Giá</label>
                    <input type="text" autocomplete="off" class="form-control mb-3" asp-for="Price" placeholder="Nhập giá cho sản phẩm..." autocomplete="off" />
                    <span asp-validation-for="Price" class="alert-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Discount">Giá giá</label>
                    <input type="text" autocomplete="off" class="form-control mb-3" asp-for="Discount" placeholder="Vd: giảm 8%..." autocomplete="off" />
                    <span asp-validation-for="Discount" class="alert-danger"></span>
                </div>


                <div class="form-group col-md-12">
                    <label class="control-label">Hình ảnh</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <button class="btn btn-success" type="button" onclick="openDialog()">Choose a pic</button>
                        </div>
                        <input type="text" autocomplete="off" class="form-control" asp-for="Image" id="file_input" aria-describedby="button-addon2">
                    </div>
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="Description">Mô tả</label>
                    <textarea id="Description" asp-for="Description" class="form-control"></textarea>
                </div>

                <div class="form-group col-md-6 mt-3 mb-3">
                    <label>
                        @Html.CheckBox("IsActive", false)
                        Hiển thị
                    </label>
                </div>
            </div>


            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i>
                Lưu
            </button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
        </form>
    </div>
</main>
@{
    var summerNote = new PetsCareProject.Areas.Admin.Models.SummerNote("#Description");
    <partial name="_SummerNote" model="summerNote" />
}
