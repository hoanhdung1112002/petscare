@model PetsCareProject.Models.tblDoctors

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận xoá bác sĩ</h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="DoctorID">Mã số</label>
            <input type="text" class="form-control mb-3" asp-for="DoctorID" disabled />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="DoctorName">Họ tên bác sĩ</label>
            <input type="text" class="form-control mb-3" asp-for="DoctorName" disabled />
        </div>
    </div>
    <!--Begin Form-->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DoctorID" />
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i>Quay lại
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i clclass="bi bi-trash-fill"></i>
            Xoá nhân viên
        </button>
    </form>
    <!--End Form-->
</main>