@using PetsCareProject.Models;
@model IList<ViewDoctors>

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh sách nhân viên</h2>
    </div>
    <p>
        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Doctor" asp-action="Create">
            <i class="bi bi-file-earmark-text me-1"></i>
            Thêm nhân viên
        </a>
    </p>
    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-success">
            <strong>Success</strong> @TempData["AlertMessage"]
        </div>
    }
    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-body mt-4">
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th class="col-1 text-center">#</th>
                                    <th class="col-1 text-center">Họ và tên</th>
                                    <th class="col-1 text-center">Công việc</th>
                                    <th class="col-1 text-center">Ảnh</th>
                                    <th class="col-1 text-center">Giá khám</th>
                                    <th class="col-1 text-center">Số điện thoại</th>
                                    <th class="col-1 text-center">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th class="text-center" scope="row">@item.DoctorID</th>
                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="Employee" asp-action="Details" asp-route-id="@item.DoctorID" class="text-primary">@item.DoctorName</a>
                                        </td>
                                        <td class="text-center"> @item.PositionName</td>
                                        <td class="text-center">
                                            <img style="width: 60px; height: 60px; object-fit: cover; object-position: center; border-radius: 5px;" src="@item.Thumb">
                                        </td>

                                        <td class="text-center"> @item.FeeAmount</td>


                                        <td class="text-center">(+84) @item.PhoneNumber</td>
                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="Doctor" asp-action="Edit" asp-route-id="@item.DoctorID" class="btn btn-primary btn-sm"
                                               title="Cập nhật thông tin bác sĩ">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-area="Admin" asp-controller="Doctor" asp-action="Delete" asp-route-id="@item.DoctorID" class="btn btn-danger btn-sm"
                                               title="Xoá hồ sơ bác sĩ">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>



