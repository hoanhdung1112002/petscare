@using PetsCareProject.Utilities;
@model PetsCareProject.Models.tblDoctors;

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    select {
        margin-bottom: 20px;
    }
</style>
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác Nhận Sửa Thông Tin</h2>
    </div>
    <div class="container shadown p-5">
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="All"></div>
            <!--FoodID-->
            <div class="form-row">
                <input type="text" class="form-control mb-3" asp-for="DoctorID" type="hidden" />
                <div class="form-group col-md-8">
                    <label asp-for="DoctorName">Tên bác sĩ</label>
                    <input type="text" class="form-control mb-3" asp-for="DoctorName" autocomplete="off" placeholder="Nhập tên bác sĩ" />
                </div>

                <div class="form-group col-md-8">
                    <label class="control-label">Hình ảnh</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <button class="btn btn-success" type="button" onclick="openDialog()">Chọn hình ảnh</button>
                        </div>
                        <input type="text" class="form-control" asp-for="Thumb" id="file_input" aria-describedby="button-addon2">
                    </div>
                </div>


                <div class="form-group col-md-8">
                    <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                    <label asp-for="PositionID">Chức vụ</label>
                    <select asp-for="PositionID" class="form-control"
                            asp-items="@(new SelectList(ViewBag.positionList, "Value", "Text"))">
                    </select>
                </div>

                <div class="form-group col-md-8">
                    <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                    <label asp-for="ServiceID">Phụ trách chuyên môn</label>
                    <select asp-for="ServiceID" class="form-control"
                            asp-items="@(new SelectList(ViewBag.serviceList, "Value", "Text"))">
                    </select>
                </div>

                <div class="form-group col-md-8">
                    <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                    <label asp-for="DoctorFeeID">Giá khám</label>
                    <select asp-for="DoctorFeeID" class="form-control"
                            asp-items="@(new SelectList(ViewBag.doctorfeeList, "Value", "Text"))">
                    </select>
                </div>

                <div class="form-group col-md-8">
                    <label asp-for="PhoneNumber">Số điện thoại</label>
                    <input type="text" class="form-control mb-3" asp-for="PhoneNumber" autocomplete="off" placeholder="Nhập số điện thoại" />
                </div>

                <div class="form-group col-md-8">
                    <label asp-for="Email">Email</label>
                    <input type="text" class="form-control mb-3" asp-for="Email" autocomplete="off" placeholder="Nhập địa chỉ Email" />
                </div>

                <div class="form-group col-md-8">
                    <label asp-for="Address">Địa chỉ</label>
                    <textarea asp-for="Address" class="form-control"></textarea>
                </div>


                <div class="form-group col-md-6 mt-3 mb-3">
                    <label>
                        @Html.CheckBox("IsActive", false)
                        Hiển thị
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i>
                Lưu
            </button>
            <a asp-controller="Doctor" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
        </form>
    </div>
</main>
@{
    var summerNote = new PetsCareProject.Areas.Admin.Models.SummerNote("#Contents");
    <partial name="_SummerNote" model="summerNote" />
}
